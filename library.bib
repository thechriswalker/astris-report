	author = {Panja, Somnath and Roy, Bimal Kumar},
	year = {2018},
	keywords = {cryptographic protocols, Blockchain, E-voting, Authentication, Biometric, Direct Record Electronic, End-to-End verifiable., Zero Knowledge},
	file = {ePrint IACR Full Text PDF:/home/chris/data/syncthing/infosec/astris/zotero/storage/9A7V6WIK/Panja and Roy - 2018 - A secure end-to-end verifiable e-voting system usi.pdf:application/pdf;ePrint IACR Snapshot:/home/chris/data/syncthing/infosec/astris/zotero/storage/UNG9KJFI/466.html:text/html},
